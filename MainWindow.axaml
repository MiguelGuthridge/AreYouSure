<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="AreYouSure.MainWindow"
        Title="Are You Sure?"
        Width="400"
        Height="200"
        CanResize="False">
  <Panel>
    <TextBlock VerticalAlignment="Top" Text="{Binding Message}" TextWrapping="Wrap"/>
    <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
      <Button Command="{Binding OnClickYes}">Yes</Button>
      <Button Command="{Binding OnClickNo}">No</Button>
    </DockPanel>
  </Panel>
</Window>
